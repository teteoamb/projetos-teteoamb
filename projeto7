		}
		
		if(pergunta1 >10 && pergunta1 <15){
		alert("obrigado por participar da pesquisa!");
		galera15++;
		}
		
		if(pergunta1 >15){
		alert("obrigado por participar da pesquisa!");
		galera15m++;
		}
		
	}

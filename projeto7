		while (pergunta = sim){
			
			var pergunta1 = prompt("quantas vezes voce utilizou o ru esse mes?");
			if pergunta1 = "n√£o"{
			alert("o numero de entrevistados foi" +(galera10 + galera15 + galera15m));
		
			}
			
		if(pergunta1 <=10){
		alert("obrigado por participar da pesquisa!");

package primeiroprojetojava;
import java.util.Scanner;

public class SegundaClasse {


	public static void main(String[] args) {
		Scanner school = new Scanner(System.in);
		int opcao = 1;
		int alunos;
		int alunofinal;
		int alunofail ;
		int alunosucesso;
		double notas[] = new double [alunos];		
		double maior = 0;
		double menor = 0;
		int i = 0;
		while(opcao == 1);
		{
		System.out.println("Digite o número da opção: \n 1- Informar outro aluno \n 2-Terminar contagem \n ");
		int opcao = school.nextInt();
		
		alunos++;
			System.out.println("Informe nota na prova de peso 5 no primeiro bimestre:");
		double prova = school.nextDouble();
		System.out.println("Informe nota no projeto de peso 3 no primeiro bimestre:");
		double projeto = school.nextDouble();
		System.out.println("Informe nota na lista de exercicio de peso 2 no primeiro bimestre:");
		double exercicio = school.nextDouble();
		double mediab =((5*prova)+(3*projeto)+(2*exercicio)/10);
		System.out.println(" média neste bimestre é "+Math.round(mediab)+"");	
		System.out.println("Informe nota na prova de peso 5 no segundo bimestre:");
		double prova2 = school.nextDouble();
		System.out.println("Informe nota no projeto de peso 3 no segundo bimestre:");
		double projeto2 = school.nextDouble();
		System.out.println("Informe nota na lista de exercicio de peso 2 no segundo bimestre:");
		double exercicio2 = school.nextDouble();
		double mediab2 =((5*prova2)+(3*projeto2)+(2*exercicio2)/10);
		System.out.println(" média neste bimestre é "+Math.round(mediab2)+"");	
		System.out.println("Informe nota na prova de peso 5 no terceiro bimestre:");
		double prova3 = school.nextDouble();
		System.out.println("Informe nota no projeto de peso 3 no terceiro bimestre:");
		double projeto3 = school.nextDouble();
		System.out.println("Informe nota na lista de exercicio de peso 2 no terceiro bimestre:");
		double exercicio3 = school.nextDouble();

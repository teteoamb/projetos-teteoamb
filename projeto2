		System.out.println("Média esse bimestre foi "+Math.round(mediab3)+"");
		double medias = (mediab+mediab2+mediab3)/3;
		notas[i] = medias;
		System.out.println("Sua média semestral é de "+Math.round(medias)+"");
			if(medias >= 8);{
			System.out.println("Você foi aprovado no semestre com média"+Math.round(medias));
			alunosucesso += 1;
			}		
			else if(medias >= 5) {
			System.out.println("Você foi para prova final necessitando tirar "+(10-medias));
			alunofinal += 1;
		}
			else{
			System.out.println("Você foi reprovado com média" +Math.round(medias)+"");
			alunofail += 1;
			
	}System.out.println("Digite o número da opção: \n 1- Informar outro aluno \n 2-Terminar contagem \n ");
	int opcao = school.nextInt();
	for(double i = 0; i < notas.lenght; i++);
	if(notas[i] > maior){
		int	 maior = notas[i];
	}else if (int i = 0; i > notas.length; i++)
	(notas[i] < menor){
		double	menor = notas[i];
		}
			
		
	
	
	}
}
			
			
